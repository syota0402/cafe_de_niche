<div class="w-75">
  
  <h1>BGM一覧</h1>
  
  <%= form_with(model: @shop_bgm, url: dashboard_shop_bgms_path, local: true) do |f| %>
    <%= f.label :name, "BGM" %>
    <%= f.text_field :name %>
    
    <%= f.submit "新規作成" %>
  <% end %>
  
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col" class="w-25">ID</th>
        <th scope="col">BGM</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @shop_bgms.each do |shop_bgm| %>
      <tr>
        <td scope="row"><%= shop_bgm.id %></td>
        <td><%= shop_bgm.name %></td>
        <td>
          <%= link_to "編集", edit_dashboard_shop_bgm_path(shop_bgm) %>
          
        </td>
        <td>
          <%= link_to "削除", dashboard_shop_bgm_path(shop_bgm), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
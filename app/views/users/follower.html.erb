<h1>フォロワー</h1>

<hr>

<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ユーザー名</th>
    </tr>
  </thead>
  <tbody>
    <% @follower.each do |follower| %>
      <tr>
        <td>
        <% if follower.image.attached? %>
          <%= image_tag follower.image, size: "100x100" %>
        <% else %>
          <%= image_tag "/images/user_dummy.png", size: "100x100" %>
        <% end %>
        </td>
        <td><%= link_to follower.name, user_path(follower.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>